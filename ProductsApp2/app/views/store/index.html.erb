<p id="notice"><%= notice %></p>

<div class="panel panel-primary col-md-9">
    <div class="panel-heading">Your Pragmatic Catalog</div>
    <div class="panel-body">
        <div class="row">
            <% @products.each do |product| %>
            <div class="">
                <% cache @products do %>
                <% @products.each do |product| %>
                <% cache product do %>
                <div class="col-md-12">
                    <h3 style="padding-left:15px"><%= product.title %></h3>
                    <div class="col-md-2">
                        <%= image_tag(product.image_url) %>
                    </div>
                    <div class="col-md-10">
                        <div>
                            <%= sanitize(product.description) %>
                        </div>
                        <div class="col-md-12">
                            <span class="col-md-2 btn btn-default"><%= number_to_currency(product.price) %></span>
                            <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true, :class =>'col-md-2 btn btn-primary col-md-offset-1' %>
                        </div>
                    </div>
                </div>
                <% end %>
                <% end %>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>
